<%= error_messages_for(f.object) %>

<table summary="Book form fields">
  <tr>
    <th>Title</th>
    <td><%= f.text_field(:title) %></td>
  </tr>
  <tr>
    <th>Author</th>
    <td><%= f.text_field(:author) %></td>
  </tr>
  <tr>
    <th>Genre</th>
    <td><%= f.select(:genre, ['Fiction','Fantasy','Non-Fiction','Mystery','History','Science Fiction','Horror','Romance','Historical Fiction','Biography','Poetry'], :prompt => 'Select Genre') %></td>
  </tr>
  <tr>
    <th>Price</th>
    <td><%= f.number_field(:price, :step => "0.01") %></td>
  </tr>
  <tr>
    <th>Published-Date</th>
    <td><%= f.date_select(:published_date,{order: [:month, :day, :year], prompt: { day: 'Select day', month: 'Select month', year: 'Select year' }, start_year: Date.today.year, end_year: 1400}, {required: true}) %></td>
  </tr>
</table>