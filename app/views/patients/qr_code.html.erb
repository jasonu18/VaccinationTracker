<!-- style sheet used for the QR Code page -->
<style>
  .qr-code{
      margin: auto;
      text-align: center;
      width: 25%;
  }

  ul {
      list-style-type: none;
      margin: 0;
      padding: 0;
      overflow: hidden;
      border: 1px solid #e7e7e7;
      background-color: #500000;
  }

  li {
      float: left;
  }

  li a {
      display: block;
      color: white;
      text-align: center;
      padding: 14px 16px;
      text-decoration: none;
  }

  li a:hover:not(.active) {
      background-color: #d22c2c;
  }
</style>

<!-- navigation bar -->
<div class="navbar">
  <ul>
    <li><%= link_to("Home", patients_home_path) %></li>
    <li class="active"><%= link_to("Patients", patients_index_path) %></li>
  </ul>
</div>

<!-- Display QR Code and Patient Name -->
<div class="qr-code">
  <h1>
    <%= @patient.first_name %>  <%= @patient.last_name %>
  </h1>

  <img src="<%= @png.to_data_url %>" />

  <br>
</div>