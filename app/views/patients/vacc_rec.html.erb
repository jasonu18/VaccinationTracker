<!-- style sheet used for the vaccination record page -->
<style>
    .patients-show{
        margin: auto;
        text-align: center;
    }

    th, td{
        margin: auto;
        text-align: left;
        width: 50%;
    }

    th{
        padding-right: 15px;
    }

    .patient-table{
        margin: auto;
    }

    ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
        overflow: hidden;
        border: 1px solid #e7e7e7;
        background-color: #500000;
    }

    li {
        float: left;
    }

    li a {
        display: block;
        color: white;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
    }

    li a:hover:not(.active) {
        background-color: #d22c2c;
    }

</style>

<!-- navigation bar -->
<div class="navbar">
  <ul>
    <li><%= link_to("Home", patients_home_path) %></li>
    <li class="active"><%= link_to("Patients", patients_index_path) %></li>
  </ul>
</div>

<!-- Show the Patient Vaccination Record -->
<div class="patients-show">

  <h2>View Patient</h2>

  <% if @patient.avatar.attached? %>
    <image style="width: 500px;" src="<%= (url_for(@patient.avatar)) %>"></image>
  <% end %>

  <table summary="Patient detail view" class="patient-table">
    <tr>
      <th>First Name</th>
      <td><%= @patient.first_name %></td>
    </tr>
    <tr>
      <th>Last Name</th>
      <td><%= @patient.last_name %></td>
    </tr>
    <tr>
      <th>Vaccination Type</th>
      <td><%= @patient.vaccine_type %></td>
    </tr>
  </table>
</div>