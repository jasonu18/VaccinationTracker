<%= link_to("<< Back to List", patients_path, :class => 'back-link') %>

<div class="patients delete">
  <h2>Delete Patient</h2>

  <%= form_for(@patient, :method => 'delete') do |f| %>

    <p>Are you sure you want to permanently delete this Patient from the list?</p>
    <p><%= @patient.first_name %> <%= @patient.last_name %></p>
    <div class="form-buttons">
      <%= f.submit("Delete Patient") %>
    </div>

  <% end %>
</div>
