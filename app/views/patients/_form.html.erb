<%= error_messages_for(f.object) %>
<!-- style sheet used for the patient info form -->
<style>
  .patient-table{
      margin: auto;
      text-align: center;
  }

  th, td{
      text-align: left;
      /*border: 3px solid green;*/
  }

  th{
      padding-right: 25px;
  }
</style>

<!-- ALl recorded patient information -->
<table summary="Patient form fields" class="patient-table">
  <tr>
    <th>First Name</th>
    <td><%= f.text_field(:first_name) %></td>
  </tr>
  <tr>
    <th>Last Name</th>
    <td><%= f.text_field(:last_name) %></td>
  </tr>
  <tr>
    <th>Date of Birth</th>
    <td><%= f.date_select(:dob,{order: [:month, :day, :year], prompt: { day: 'Select day', month: 'Select month', year: 'Select year' }, start_year: Date.today.year, end_year: 1400}, {required: true}) %></td>
  </tr>
  <tr>
    <th>Address</th>
    <td><%= f.text_field(:address) %></td>
  </tr>
  <tr>
    <th>City</th>
    <td><%= f.text_field(:city) %></td>
  </tr>
  <tr>
    <th>State</th>
    <td><%= f.text_field(:state) %></td>
  </tr>
  <tr>
    <th>Phone Number</th>
    <td><%= f.text_field(:phone_number) %></td>
  </tr>
  <tr>
    <th>Age</th>
    <td><%= f.number_field(:age) %></td>
  </tr>
  <tr>
    <th>Gender</th>
    <td><%= f.select(:gender, ['Male','Female','Other'], :prompt => 'Select Gender') %></td>
  </tr>
  <tr>
    <th>Vaccine Type</th>
    <td><%= f.select(:vaccine_type, ['Pfizer','Moderna','Johnson & Johnson'], :prompt => 'Select Type') %></td>
  </tr>
  <tr>
    <th>Upload Image</th>
      <td><%= f.file_field :avatar %></td>
  </tr>
</table>